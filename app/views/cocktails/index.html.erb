<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://www.algonquinhotel.com/wp-content/uploads/2015/02/BlueBar_3.jpg');">
  <div class="banner-content">
    <h1 class="text-center">Your cocktail list</h1>
      <div class="lien">
        <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
      </div>
  </div>
</div>


<div class="wrapper">
  <div class="container">
    <div class="row">

    <div class="col-xs-12 col-sm-4 text-center">
      <i class="fa fa-plus-square fa-5x iconfont" aria-hidden="true"></i>
      <p class="text-center" data-sr="enter top, move 250px, over 1s, wait 3s">Create your own cocktails !</p>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <i class="fa fa-share-square fa-5x iconfont" aria-hidden="true"></i>
      <p class="text-center">Teach them to Gaby as he desperatly needs it</p>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <i class="fa fa-glass fa-5x iconfont" aria-hidden="true"></i>
      <p class="text-center">Drink what you achieved !</p>
    </div>

   </div>

   <hr>

    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card text-center">
            <% if cocktail.picture %>
              <div class="card-header" style="background-image: url('<%= cl_image_path cocktail.picture, height: 150, width: 360, crop: :fill %>')">
              </div>
            <% else %>
              <div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
              </div>
            <% end %>
            <div class="card-body">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
