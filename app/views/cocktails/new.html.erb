<h1>Create a new Cocktail</h1>


<form action="/cocktails" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div>
    <label for="name"></label>
    <input type="text" name="name" placeholder="Nom du cocktail">
  </div>

  <div>
    <label for="description_dose1"></label>
    <input type="text" name="dose1" placeholder="Nb de dose">
    <select name="ingredient1">
      <%= options_for_select(@ingredients) %>
    </select>

  </div>

  <div>
    <label for="description_dose2"></label>
    <input type="text" name="description_dose2" placeholder="Nb de dose">
    <select name="ingredient2">
      <%= options_for_select(@ingredients) %>
    </select>

  </div>

  <div>
    <label for="description_dose3"></label>
    <input type="text" name="description_dose3" placeholder="Nb de dose">

    <select name="ingredient3">
      <%= options_for_select(@ingredients) %>
    </select>
  </div>

  <input name="commit" type="submit" value="Create a cocktail" />

</form>
